<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    card_view:cardBackgroundColor="#F5F8FD"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/ln_pare"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_left"
            android:layout_width="5dp"
            android:layout_height="match_parent"

            android:background="@drawable/my_selector_itemview_new" />


        <RelativeLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/v_left">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/tv_name_courses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Mathematics"
                    android:textColor="#2A2A2A"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_time_courses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="10:00 AM — 10:30 AM"
                    android:textColor="#69696E"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_class_name_courses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Class 1"
                    android:textColor="#69696E"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_room_courses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:text="Room 204 • Classroom 2"
                    android:textColor="#69696E"
                    android:textSize="15dp" />
            </LinearLayout>
            <ImageView
                android:layout_margin="15dp"
                android:layout_width="34dp"
                android:adjustViewBounds="true"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icn_shape"/>


        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>
